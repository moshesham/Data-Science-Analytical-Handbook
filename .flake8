[flake8]
exclude = _site, .venv, env, venv, .git, __pycache__, html_source
max-line-length = 120
extend-ignore = E203,W503
# Relax line-length rule for Streamlit pages & simulation scripts (content-heavy)
per-file-ignores =
	streamlit_app/Product_Analytics/pages/*.py:E501
	Simulations/*.py:E501
	streamlit_app/Product_Analytics/main.py:E501
	streamlit_app/Product_Analytics/test.py:E501
	streamlit_app/Product_Analytics/features/*.py:E501
